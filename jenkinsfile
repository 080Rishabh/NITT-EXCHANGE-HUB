pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "rishu28/nitt-exchange-hub"
    }
    stages {
        stage('Checkout Code') {
            steps {
                echo "ğŸš€ Checking out code from GitHub..."
                git 'git@github.com:080Rishabh/NITT-EXCHANGE-HUB.git'
                echo "âœ… Code checkout complete!"
            }
        }
        stage('Build Docker Image') {
            steps {
                echo "ğŸ› ï¸ Building Docker image: $DOCKER_IMAGE..."
                sh 'cd $WORKSPACE && docker build -t $DOCKER_IMAGE .'
                echo "âœ… Docker image built successfully!"
            }
        }
        stage('Login to Docker Hub') {
            steps {
                echo "ğŸ” Logging into Docker Hub as rishu28..."
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker login -u rishu28 -p $(cat /run/secrets/docker-hub-credentials)'
                }
                echo "âœ… Docker login successful!"
            }
        }
        stage('Push to Docker Hub') {
            steps {
                echo "ğŸ“¤ Pushing Docker image to Docker Hub..."
                sh 'docker push $DOCKER_IMAGE'
                echo "âœ… Docker image pushed successfully!"
            }
        }
        stage('Deploy to Minikube') {
            steps {
                echo "ğŸš¢ Deploying application to Minikube..."
                sh 'kubectl apply -f kubernetes/deployment.yaml'
                sh 'kubectl apply -f kubernetes/service.yaml'
                echo "âœ… Deployment successful!"
            }
        }
    }
}
